{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":pinAllExceptPeerDependencies"
  ],
  "semanticCommits": "enabled",
  "enabledManagers": ["npm", "dockerfile", "docker-compose"],
  "branchPrefix": "deps/",
  "timezone": "Europe/Berlin",
  "schedule": ["at any time"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "groupName": "Docker Images",
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "semanticCommitType": "chore",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "automergeStrategy": "merge-commit"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "devDependencies", "peerDependencies"],
      "matchDatasources": ["npm"],
      "semanticCommitType": "chore",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "automergeStrategy": "merge-commit"
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@actions/"]
    },
    {
      "groupName": "TypeScript Build Tools",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "typescript",
        "ts-jest",
        "@tsconfig/node22",
        "tsx",
        "@types/jest",
        "@types/node"
      ]
    },
    {
      "groupName": "Linting Tools",
      "matchManagers": ["npm"],
      "matchPackageNames": ["eslint", "@sap/eslint-config", "prettier"]
    },
    {
      "groupName": "Testing Frameworks",
      "matchManagers": ["npm"],
      "matchPackageNames": ["jest", "@jest/globals", "jest-environment-node"]
    }
  ]
}
